# Production Environment Configuration

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=random_long_string_here_for_security  # Use a strong, unique key in production!

# Server Configuration
HOST=0.0.0.0  # Bind to all interfaces
PORT=8080  # Or use port 80/443 with proper setup

# Database Configuration
DATABASE_URL=postgresql://username:password@hostname/database  # Use a production database

# FAL AI API Configuration
FAL_API_KEY=your_production_fal_api_key
FAL_API_BASE_URL=https://fal.run

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_production_google_client_id
GOOGLE_CLIENT_SECRET=your_production_google_client_secret
ALLOWED_EMAIL_DOMAIN=zemingo.com

# Initial Admin User (created on first run)
ADMIN_USERNAME=admin_username
ADMIN_PASSWORD=strong_secure_password  # Use a strong password in production 