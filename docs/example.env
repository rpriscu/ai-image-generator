# Flask Configuration
FLASK_ENV=development  # development, testing, or production
SECRET_KEY=your_secret_key_here  # Used for secure sessions - change in production!

# Server Configuration
HOST=0.0.0.0  # Default host setting
PORT=8080  # Default port

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost/ai_image_generator  # PostgreSQL connection string

# FAL AI API Configuration
FAL_API_KEY=your_fal_api_key_here  # API key from fal.ai
FAL_API_BASE_URL=https://fal.run  # Default API base URL

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
ALLOWED_EMAIL_DOMAIN=zemingo.com  # Restrict access to this email domain

# Initial Admin User (created on first run)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=secure_password_here  # Change this in production! 